# Security Settings (Use strong, unique values in production)
JWT_SECRET=change-this-to-a-long-random-string-in-production
SESSION_SECRET=change-this-to-a-different-long-random-string

# JWT Configuration
JWT_EXPIRY=8h
REFRESH_TOKEN_EXPIRY=30d

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/dentamind

# Application Settings
NODE_ENV=development
PORT=3000

# Backup Configuration 
BACKUP_SCHEDULE="0 0 * * *" # Daily at midnight
BACKUP_RETENTION_DAYS=30

# Email Configuration (for notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=notifications@yourdomain.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=DentaMind Security <security@yourdomain.com>

# Emergency Contact
SECURITY_CONTACT_EMAIL=security@yourdomain.com
SECURITY_CONTACT_PHONE=+1234567890

# AI API Keys
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION_ID=your-openai-org-id

# Specialized AI Keys (Optional - Will fall back to OPENAI_API_KEY if not set)
XRAY_AI_KEY=your-xray-analysis-specialized-key
DIAGNOSIS_AI_KEY=your-diagnosis-specialized-key
TREATMENT_AI_KEY=your-treatment-planning-specialized-key
FINANCIAL_AI_KEY=your-financial-specialized-key
SCHEDULING_AI_KEY=your-scheduling-specialized-key
CHAT_AI_KEY=your-patient-communication-key

# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000

# AI Service Configuration
AI_SERVICE_URL=http://localhost:5000
AI_SERVICE_KEY=your_ai_service_key

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760 # 10MB

# PDF Generation
PDF_TEMPLATE_DIR=templates
PDF_OUTPUT_DIR=reports

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Database (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dentamind
DB_USER=postgres
DB_PASSWORD=your_password
